package main;

import java.util.ArrayList;
import java.util.Random;

public class AI {
	private Bord myBord;
	private int myColor;
	private String myName;
	private ArrayList<Point> list = new ArrayList<Point>();
	
	AI(String name, Bord bord, int color){
		myBord = bord;
		myColor = color;
		myName = name;
	}
	
	public void put(){
		System.out.println("敵が打ちます");
		check();
		Random rnd = new Random();
		Point point = list.get(rnd.nextInt(list.size()));
		myBord.put(point.x, point.y, myColor);
	}
	
	private void check(){
		list.clear();
		for(int x = 0; x < 8; x++){
			for(int y = 0; y < 8; y++){
				if(myBord.putCheck(x, y, myColor)){
					list.add(new Point(x, y));
				}
			}
		}
	}
	
	public void pass(){
		
	}
}
